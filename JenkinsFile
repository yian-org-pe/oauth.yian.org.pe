pipeline {
	agent any
	
	tools {
		maven 'maven-tool'
	}
	
	stages {
		stage('Build') {
		    steps {
		    	sh 'mvn clean install';
		    }
		}
		
		stage('deploy') {
			steps {
				sshagent("jenkins-docker") {
					sh 'git push ssh://588ac97789f5cff8a700001b@auth-devok.rhcloud.com/~/git/auth.git/ HEAD:master';
				}
			}
		}
	}
}